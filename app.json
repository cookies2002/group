{
  "name": "Madara Uchiha Leech Bot",
  "description": "A powerful Telegram leech and file-sharing bot with MongoDB support.",
  "repository": "https://github.com/your-username/madara-leech-bot",
  "keywords": ["telegram", "leech", "aria2", "mongodb", "pyrogram", "heroku"],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "API_ID": {
      "description": "Get this from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Get this from https://my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Bot token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram numeric user ID",
      "required": true
    },
    "MONGO_URL": {
      "description": "MongoDB connection URI",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo 'Bot Deployed Successfully!'"
  }
}
