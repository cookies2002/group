{
  "name": "pyrogram-leech-bot",
  "description": "A Telegram bot to download and leech torrents via Aria2 and upload to Telegram.",
  "repository": "https://github.com/yourusername/yourrepo",
  "keywords": ["telegram", "aria2", "torrent", "leech", "pyrogram"],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API HASH",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Bot Token from BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID",
      "required": true
    },
    "MONGO_URL": {
      "description": "MongoDB connection URI",
      "required": true
    },
    "ARIA2_SECRET": {
      "description": "Secret token to secure aria2 RPC",
      "required": false
    },
    "ARIA2_HOST": {
      "description": "Aria2 RPC host",
      "value": "http://localhost"
    },
    "ARIA2_PORT": {
      "description": "Aria2 RPC port",
      "value": "6800"
    },
    "DOWNLOAD_DIR": {
      "description": "Download directory",
      "value": "downloads"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "stack": "container"
}
